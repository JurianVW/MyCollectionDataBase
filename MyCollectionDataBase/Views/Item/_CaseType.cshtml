@model Models.Case

<h3>Case Details</h3>

<form method="post">
    <div class="input-group">
        <span class="input-group-addon" id="CaseType-addon"><b>Country</b></span>
        <select name="CaseType" class="form-control" aria-describedby="CaseType-addon" style="max-width: 100%">
            <option value="Steelbook">Steelbook</option>
            <option value="Blu-Ray Case">Blu-Ray Case</option>
            <option value="Music">Music</option>
            <option value="TV-Show">TV-Show</option>
        </select>
    </div>
    <br />
    <div class="input-group">
        <span class="input-group-addon" id="Format-addon"><b>Cover</b></span>
        <input name="Cover" value="@Model.Cover" type="text" class="form-control" aria-describedby="Format-addon" style="max-width: 100%">
        <span asp-validation-for="Cover" class="text-danger"></span>
    </div>
    <br />
</form>