@using System.Collections.Generic
@using Models
@model IEnumerable<Item>

@{
    ViewData["Title"] = "Items";
}

<h2>My Items</h2>
<p><a asp-action="Create" asp-controller="Item">Create new</a></p>

<table class="table">
    <thead>
        <tr>
            <th class="text-primary">
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParm">Title <span class="glyphicon glyphicon-sort pull-right"></span></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.TypeSortParm">Type <span class="glyphicon glyphicon-sort pull-right"></span></a>
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Item item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelList => item.Title)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelList => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelList => item.ItemType)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>