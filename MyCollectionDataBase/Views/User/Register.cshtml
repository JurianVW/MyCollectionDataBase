@model MyCollectionDataBase.ViewModels.UserRegister
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="EmailAddress">Email: </label>
        <input autofocus name="EmailAddress" value="@Model.EmailAddress " type="email" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Username">Username: </label>
        <input name="Username" value="@Model.Username" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Password">Password: </label>
        <input name="Password" value="@Model.Password" type="password" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="ConfirmationPassword">Confirmation password: </label>
        <input name="ConfirmationPassword" value="@Model.ConfirmationPassword" type="password" class="form-control">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
    <ul style="list-style: none; padding: 0; margin: 0;">
        <li><span asp-validation-for="EmailAddress" class="text-danger"></span></li>
        <li><span asp-validation-for="Username" class="text-danger"></span></li>
        <li><span asp-validation-for="Password" class="text-danger"></span></li>
        <li><span asp-validation-for="ConfirmationPassword" class="text-danger"></span></li>
        @if (ViewBag.MessageEmail != null)
        {
            <li><span class="text-danger">@ViewBag.MessageEmail</span></li>
        }
        @if (ViewBag.MessageUsername != null)
        {
            <li><span class="text-danger">@ViewBag.MessageUsername</span></li>
        }
    </ul>
</form>