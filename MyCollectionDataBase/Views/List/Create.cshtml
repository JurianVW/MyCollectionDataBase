@model Models.List
@{
    ViewData["Title"] = "Create list";
}

<h2>Create list</h2>
<div class="row">
    <form method="post" class="col-lg-6">
        <div class="form-group">
            <label asp-for="Name">Name: </label>
            <input autofocus name="Name" value="@Model.Name" type="text" class="form-control" style="max-width:100%">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description: </label>
            <textarea name="Description" value="@Model.Description" type="text" class="form-control" rows="5" style="max-width: 100%; resize: none;"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </form>
</div>